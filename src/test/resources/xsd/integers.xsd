<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
	<xs:element name="integer1">
		<xs:simpleType>
			<xs:restriction base="xs:integer">
				<xs:enumeration value="7"/>
				<xs:enumeration value="9"/>
			</xs:restriction>
		</xs:simpleType>
	</xs:element>
	<xs:element name="integer2">
		<xs:simpleType>
			<xs:restriction base="xs:integer">
              <!-- 
                Patterns are ORed. So this is actually
                [\-+]?2{3,5}[0-9]{1,2}|[\-+]?2{4,6}[0-9]{1,2}
              -->
				<xs:pattern value="[\-+]?2{3,5}[0-9]{1,2}"/>
				<xs:pattern value="[\-+]?2{4,6}[0-9]{1,2}"/>
			</xs:restriction>
		</xs:simpleType>
	</xs:element>
	<xs:element name="integer3">
		<xs:simpleType>
			<xs:restriction base="xs:integer">
              <!-- Enumerations take precedence over patterns. -->
				<xs:pattern value="[\-+]?2{3,5}[0-9]{1,2}"/>
				<xs:enumeration value="2227"/>
				<xs:enumeration value="22229"/>
			</xs:restriction>
		</xs:simpleType>
	</xs:element>
	<xs:element name="integer4">
		<xs:simpleType>
			<xs:restriction base="xs:integer">
				<xs:minInclusive value="001"/>
				<xs:maxInclusive value="7777777777777777777777777777777777777777777"/>
				<xs:totalDigits value="008"/>
			</xs:restriction>
		</xs:simpleType>
	</xs:element>
	<xs:element name="totalDigits" type="sequenceTotalDigits"/>
	<xs:complexType name="sequenceTotalDigits">
		<xs:sequence minOccurs="200" maxOccurs="200">
			<xs:element name="sample">
				<xs:simpleType>
					<xs:restriction base="xs:decimal">
						<xs:fractionDigits value="3"/>
						<xs:totalDigits value="3"/>
					</xs:restriction>
				</xs:simpleType>
			</xs:element>
		</xs:sequence>
	</xs:complexType>
	<xs:element name="totalDigits1">
		<xs:simpleType>
			<xs:restriction base="xs:decimal">
				<xs:fractionDigits value="3"/>
				<xs:totalDigits value="7"/>
			</xs:restriction>
		</xs:simpleType>
	</xs:element>
	<xs:element name="nonnegativeinteger" type="xs:nonNegativeInteger"/>
</xs:schema>
